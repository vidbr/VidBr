<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.VidBr" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_primary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Base.Theme.VidBr.Default" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Base.Theme.VidBr.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Base.Theme.VidBr.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.VidBr" parent="Base.Theme.VidBr" />
    <style name="Theme.VidBr.Light" parent="Base.Theme.VidBr.Light" />
    <style name="Theme.VidBr.Dark" parent="Base.Theme.VidBr.Dark" />
    <style name="Theme.VidBr.Default" parent="Base.Theme.VidBr.Default" />

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>

        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ShoppingList.BottomSheetDialog</item>
    </style>

    <style name="ShoppingList.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:colorControlNormal">#4D000000</item>
        <item name="android:colorControlActivated">@color/dialog_color_1</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

</resources>