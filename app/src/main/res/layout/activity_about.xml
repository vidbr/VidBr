<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/toolbar_title_about"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Ícone do App -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="?attr/actionBarSize"
            android:src="@mipmap/ic_launcher" />

        <!-- Nome do Aplicativo -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Descrição do Aplicativo -->
        <TextView
            android:id="@+id/app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_marginTop="16dp"
            android:text="@string/app_description"
            android:textColor="#808080"
            android:textSize="16sp" />

        <!-- Convite para Classificação -->
        <TextView
            android:id="@+id/rating_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_description"
            android:layout_marginTop="24dp"
            android:text="@string/rating_invitation"
            android:textColor="#808080"
            android:textSize="14sp" />

        <!-- Botão de Classificação -->
        <Button
            android:id="@+id/rate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_invitation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/rate_button_text"
            android:textColor="#ffffff" />

        <!-- Botão de Licenças -->
        <Button
            android:id="@+id/licenses_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Licenses"
            android:textColor="#ffffff" />

        <!-- Termos e Políticas -->
        <TextView
            android:id="@+id/terms_and_policies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/licenses_button"
            android:layout_marginTop="24dp"
            android:autoLink="web"
            android:text="@string/terms_and_policies"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Links para Termos e Política -->
        <TextView
            android:id="@+id/terms_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/terms_and_policies"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:text="@string/terms_link_text"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/privacy_policy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/terms_link"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:text="@string/privacy_policy_link_text"
            android:textColor="@android:color/holo_blue_light" />

        <!-- Copyright -->
        <TextView
            android:id="@+id/copyright_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="@string/copyright_text"
            android:textColor="#808080"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
