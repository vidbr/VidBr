<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_verificado"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/verified"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textViewVerificadoAzul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verificado_azul"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewRequisitosAzul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requisitos_azul"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewRequisitosAzulDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requisitos_azul_detalhes"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/verifiedgold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/textViewVerificadoDourado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verificado_dourado"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewRequisitosDourado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requisitos_dourado"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewRequisitosDouradoDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requisitos_dourado_detalhes"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewDicasImportantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dicas_importantes"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewDicasImportantesDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dicas_importantes_detalhes"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewInstrucoesEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrucoes_email"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:textSize="12sp"/>
    </LinearLayout>
</ScrollView>
